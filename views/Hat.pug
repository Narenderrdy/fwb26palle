extends layout

block content
  h1= title
  p Welcome to the Hat pug
  div(class="container-fluid")
        div(class="row")
            -
                let Hat = [
                    {
                        "brand": "Tommy",
                        "material": "cotton",
                        "cost": "FIFTEEN USD"
                    },
                    {
                        "brand": "Kangol",
                        "material": "Wool",
                        "cost": "Twenty USD"
                    },
                    {
                        "brand": "Bailey",
                        "material": "Nylon",
                        "cost": "Ten USD"
                    },                   
                ]
            each v,index in Hat
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}